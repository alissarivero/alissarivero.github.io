---
import BaseLayout from "../layouts/BaseLayout.astro";
import TimeLineElement from "../components/cv/TimeLine.astro";
---

<BaseLayout title="Curriculum Vitale" sideBarActiveItemID="cv">
  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Education</div>
  </div>

  <div class="time-line-container grid gap-4 mb-10">
    <TimeLineElement
      title="Duke University"
      subtitle="B.A. in Psychology, Minor in Evolutionary Anthropology"
      caption ="2021-2025 | Durham, NC"
    />
    <TimeLineElement
      title="International Baccalaureate Diploma"
      subtitle="Washington-Liberty High School"
      caption="2017-2021 | Arlington, VA"
    />
  </div>

  <div class="mb-5">
    <div class="text-3xl w-full font-bold">Research Highlights</div>
  </div>

  <div class="time-line-container mb-10">
    <TimeLineElement
      title="Lab Manager, Senior Thesis Student, and Research Assistant at the Tomasello Lab"
      subtitle="2021-Present | Duke University"
    >
    </TimeLineElement>
    <TimeLineElement
      title="Affiliated Researcher at the Mind and Culture Lab"
      subtitle="2024-Present | Duke University"
    >
    </TimeLineElement>
    <TimeLineElement
      title="Lead Researcher at the BRITE Lab"
      subtitle="2022-Present | Duke University"
    >
    </TimeLineElement>
  </div>

     <div class="mt-8">
      <a href="https://docs.google.com/document/d/1pGDpktHWTOFIAoS9j6Z6NZcigpKv67fye2jeIm_RL6U/edit?usp=sharing" target="_blank" class="btn btn-outline ml-5">
        Click here for access to my full CV 
      </a>

      <div class="flex justify-center w-full relative mt-0">
        <img
          src="/moon_short.webp"
          alt="Thanks for coming!"
          class="h-90 md:h-95 object-contain w-[95%] md:w-[100%] max-w-[1000px] z-0"
        />
      </div>