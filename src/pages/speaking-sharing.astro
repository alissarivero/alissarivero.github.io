---
import BaseLayout from "../layouts/BaseLayout.astro";

const images = [
  { src: "/prosociality.webp", caption: "Psych 101 Guest Lecture: Prosociality (2025)" },
  { src: "/launch.webp", caption: "Duke Community Affairs Launch Panelist: 'Community-Engaged Research' (2025)" },
  { src: "/SRCDposter.webp", caption: "Poster at SRCD (2025)" },
  { src: "/thesis.webp", caption: "Tomasello Lab Thesis Defense Celebration (2025)" },
  { src: "/CDS.webp", caption: "CDS (2024)" },
  { src: "/graduation.webp", caption: "Graduation from Duke (2025)" },
  { src: "/psychone.webp", caption: "Presentation at PsychOne Conference (2025)" },
  { src: "/guestlecture.webp", caption: "Psych 101 Guest Lecture: Prosociality (2025)" },
  { src: "/APAposter.webp", caption: "Poster at APA (2023)"},
  { src: "/DHC.webp", caption: "Leading Celebration Event for Duke Homebuyers Club (2024)" },
  { src: "/apa.webp", caption: "APA (2023)"},
  ];
---

<BaseLayout title="Speaking & Sharing">
  <section class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4 p-4">
    {images.map((img) => (
      <div class="relative group overflow-hidden rounded-xl shadow-md">
        <img
          src={img.src}
          alt={img.caption}
          loading="lazy"
          class="w-full h-48 object-cover transition duration-300 ease-in-out group-hover:opacity-60"
        />
        <div
          class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100
                 transition-opacity duration-300 bg-black/60 text-white text-center text-sm p-2"
        >
          {img.caption}
        </div>
      </div>
    ))}
  </section>
</BaseLayout>
