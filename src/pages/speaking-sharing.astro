---
import BaseLayout from "../layouts/BaseLayout.astro";

const images = [
  { src: "/prosociality.webp", caption: "Psych 101 Guest Lecture (2025)"},
  { src: "/launch.webp", caption: "Duke Community Affairs Launch Panelist (2025)" },
  { src: "/srcd.webp", caption: "SRCD Poster (2025)" },
  { src: "/thesis.webp", caption: "Thesis Defense Celebration (2025)" },
  { src: "/CDS.webp", caption: "CDS (2024)" },
  { src: "/graduation.webp", caption: "Duke Graduation (2025)" },
  { src: "/psychone.webp", caption: "PsychOne Conference Presentation (2025)" },
  { src: "/101team.webp", caption: "Psych 101 Guest Lecture (2025)" },
  { src: "/APAposter.webp", caption: "APA Poster (2023)"},
  { src: "/DHC.webp", caption: "Duke Homebuyers Club Celebration (2024)" },
  { src: "/apa.webp", caption: "APA (2023)"},
  { src: "/guestlecture.webp", caption: "Psych 101 Guest Lecture (2025)" }
  ];
---

<BaseLayout title="Speaking & Sharing">
<div class="mb-5 text-center">
  <div class="text-3xl font-bold">Speaking & Sharing</div>
</div>
</div>
  <section class="grid grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 p-4 place-items-center">
    {images.map((img) => (
      <div class="relative group overflow-hidden rounded-full shadow-md w-36 h-36 sm:w-40 sm:h-40 md:w-48 md:h-48">
        <img
          src={img.src}
          alt={img.caption}
          loading="lazy"
          class="w-full h-full object-cover rounded-full transition duration-300 ease-in-out group-hover:opacity-60"
        />
        <div
          class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100
                 transition-opacity duration-300 bg-black/60 text-white text-center text-sm p-2 rounded-full"
        >
          {img.caption}
        </div>
      </div>
    ))}
  </section>
</BaseLayout>