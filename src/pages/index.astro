---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-2">
    <div class="text-xl py-1"></div>

    <div class="flex justify-center py-0">
      <img
        src="/name_draw.webp"
        alt="Name illustration"
        class="h-90 md:h-95 object-contain"
      />
    </div>    

    <div class="flex justify-center py-2">
      <p class="text-lg text-center max-w-5xl">
        I am an aspiring <b>developmental psychologist</b>, currently working with Dr. Michael Tomasello and Dr. Dorsa Amir at Duke University.
        My research centers children as models of cooperation, learning, exploration, and idea-generation. I am particularly interested in how these processes
        are shaped by bottom-up and top-down influences, including acute changes to childhood.
      </p>
    </div>

    <div class="mt-8 flex flex-col items-center relative">
      <a
        href="https://alissarivero.github.io/projects/"
        target="_blank"
        class="btn btn-outline mb-2 z-10 relative top-4"
      >
        Learn more about my research
      </a>

      <div class="flex justify-center w-full relative -mt-12">
        <img
          src="/grass_draw.webp"
          alt="Grass illustration"
          class="h-90 md:h-95 object-contain w-[95%] md:w-[100%] max-w-[1000px] z-0"
        />
      </div>
      <div class="flex justify-center w-full relative mt-20">
        <img
          src="/moon.webp"
          alt="Grass illustration"
          class="h-90 md:h-95 object-contain w-[95%] md:w-[100%] max-w-[1000px] z-0"
        />
      </div>
    </div>
  </div>
</BaseLayout>
