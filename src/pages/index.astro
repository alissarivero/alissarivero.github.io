---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1"></div>
<div class="flex justify-center py-0">
  <img
    src="/name_draw.webp"
    class="h-90 md:h-95 object-contain"
  />
</div>    
    <div class="flex justify-center py-2">
      <text class="text-lg">
       I am an aspiring <b>developmental psychologist</b>, currently working with Dr. Michael Tomasello and Dr. Dorsa Amir at Duke University.
       My research centers children as models of cooperation, learning, and exploration. I am particularly interested in how these processes
       are shaped by bottom-up and top top-down influences, including acute changes to childhood. 
      </text>
    </div>
<div class="mt-4">
  <a
    href="https://alissarivero.github.io/research-interests/"
    target="_blank"
    class="btn btn-outline ml-5"
  >
    Learn more about my research
  </a>
  <img
    src="/grass_draw.webp"
    alt="Alissa Rivero"
    class="h-90 md:h-95 object-contain"
  />
</div>

<div class="mt-12">
  <div class="text-3xl w-full font-bold mb-2">My current work</div>
</div>

  <HorizontalCard
    title="Children's Exploration and Learning with Peers versus Adults"
    img="/explore.webp"
    desc="Rivero, A., Tomasello, M."
    url="#"
  />
