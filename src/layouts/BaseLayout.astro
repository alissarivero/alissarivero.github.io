---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import SideBar from "../components/SideBar.astro";
import { ViewTransitions } from "astro:transitions";
import { SITE_TITLE, SITE_DESCRIPTION, TRANSITION_API } from "../config";

const {
  image,
  title = SITE_TITLE,
  description = SITE_DESCRIPTION,
  includeSidebar = true,
  sideBarActiveItemID,
  ogType,
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="business">
  <head>
    <BaseHead title={title} description={description} image={image} ogType={ogType} />
    {TRANSITION_API && <ViewTransitions />}
  </head>

  <body>
    <div class="drawer lg:drawer-open bg-base-100 text-base-content">
      <!-- Toggle checkbox for mobile sidebar -->
      <input id="my-drawer" type="checkbox" class="drawer-toggle" />

      <!-- Main content area -->
      <div class="drawer-content bg-base-100 text-base-content">
        <Header title={SITE_TITLE} />
        <div class="md:flex md:justify-center">
          <main class="p-6 pt-10 lg:max-w-[900px] max-w-[100vw]">
            <slot />
          </main>
        </div>
        <Footer />
      </div>

      <!-- Sidebar: direct child of .drawer -->
      {includeSidebar && (
        <aside class="drawer-side" data-theme="sidebarDark">
          <!-- Overlay for mobile click-off -->
          <label for="my-drawer" class="drawer-overlay"></label>

          <!-- Sidebar container -->
          <nav class="min-h-full w-72 bg-base-100 text-base-content">
            <SideBar sideBarActiveItemID={sideBarActiveItemID} />
          </nav>
        </aside>
      )}
    </div>
  </body>
</html>
