---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<!-- Must be a direct child of the .drawer container in BaseLayout -->
<div class="drawer-side z-40 bg-white-500">
  <label for="my-drawer" class="drawer-overlay"></label>

  <!-- Sidebar shell: fixed viewport height, NO scroll here -->
  <aside
    data-theme="sidebarDark"
    class="w-full md:w-[25rem]
           h-[100svh] md:h-screen  /* safe viewport height on mobile */
           flex flex-col
           px-6 pt-6 md:px-8 md:pt-8
           text-base-content
           overflow-hidden           /* prevent double scroll on mobile */
    "
  >
    <!-- Top: avatar -->
    <div class="w-fit mx-auto mt-2 mb-6 md:mt-4 md:mb-6">
      <a href="/">
        <div class="avatar transition ease-in-out hover:scale-[103%] block m-auto">
          <div class="w-[11rem] md:w-[16rem]">
            <Image
              class="mask mask-circle object-cover"
              format="webp"
              width={500}
              height={500}
              src="/profile.webp"
              alt="Profile image"
            />
          </div>
        </div>
      </a>
    </div>

    <!-- Middle: the ONLY scrollable area -->
    <div class="flex-1 min-h-0 overflow-y-auto overscroll-contain pr-2 -mr-2">
      <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    </div>

    <!-- Bottom: footer pinned by flex (no sticky needed) -->
    <div class="pt-4">
      <SideBarFooter />
    </div>
  </aside>
</div>

<style is:global>
  /* Make sure the drawer container stretches, so the sidebar can fill it */
  .drawer { min-height: 100svh; }

  /* Larger, consistent menu text (includes <summary>) */
  aside[data-theme="sidebarDark"] .menu,
  aside[data-theme="sidebarDark"] .menu :is(a, button, span, summary) {
    font-size: 1.2rem !important;
    line-height: 1.35 !important;
  }
  /* Ensure dropdown header (“Research”) isn’t down-sized by DaisyUI */
  aside[data-theme="sidebarDark"] .menu :where(li > details > summary),
  aside[data-theme="sidebarDark"] .menu :where(li > details[open] > summary) {
    font-size: 1.2rem !important;
    line-height: 1.35 !important;
    padding-top: 0.75rem;
    padding-bottom: 0.75rem;
    font-weight: 400;
    cursor: pointer;
  }

  /* Optional: slightly tighter list spacing */
  aside[data-theme="sidebarDark"] .menu li { margin: 0.25rem 0; }
</style>
