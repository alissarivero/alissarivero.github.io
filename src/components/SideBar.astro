---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<!-- Must be a direct child of the .drawer container in BaseLayout -->
<div class="drawer-side z-40 bg-white-500 h-screen">
  <!-- Required overlay for mobile -->
  <label for="my-drawer" class="drawer-overlay"></label>

  <!-- Sidebar container -->
  <aside
    data-theme="sidebarDark"
    class="px-8 pt-8 h-full min-h-screen w-[26rem] leading-relaxed text-base-content flex flex-col overflow-y-auto"
  >
    <!-- Profile Image (unchanged) -->
    <div class="w-fit mx-auto mt-8 mb-8">
      <a href="/">
        <div class="avatar transition ease-in-out hover:scale-[103%] block m-auto">
          <div class="w-[16rem]">
            <Image
              class="mask mask-circle object-cover"
              format="webp"
              width={600}
              height={600}
              src="/profile.webp"
              alt="Profile image"
            />
          </div>
        </div>
      </a>
    </div>

    <!-- Menu fills remaining space so footer sits at bottom -->
    <div class="flex-1">
      <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    </div>

    <!-- Footer stays at bottom -->
    <SideBarFooter />
  </aside>
</div>

<!-- Force bigger menu text regardless of DaisyUI defaults -->
<style is:global>
  /* Target only this sidebar instance via data-theme on the aside */
  aside[data-theme="sidebarDark"] .menu,
  aside[data-theme="sidebarDark"] .menu :is(a, button, span) {
    font-size: 1.4rem !important;   /* bump size: ~24px */
    line-height: 1.6 !important;
  }
  /* Optional: slightly tighter list spacing if needed */
  aside[data-theme="sidebarDark"] .menu li { margin-top: 0.25rem; margin-bottom: 0.25rem; }
</style>
