---
import SideBarFooter from "./SideBarFooter.astro";
import { Image } from "astro:assets";
import SideBarMenu from "./SideBarMenu.astro";
const { sideBarActiveItemID } = Astro.props;
---

<!-- Must be a direct child of the .drawer container in BaseLayout -->
<div class="drawer-side z-40 bg-white-500">
  <!-- Required overlay for mobile -->
  <label for="my-drawer" class="drawer-overlay"></label>

  <!-- Sidebar container -->
  <aside
    data-theme="sidebarDark"
    class="px-8 pt-8 min-h-full w-[26rem] text-[1.3rem] md:text-[1.4rem] leading-relaxed text-base-content flex flex-col"
  >
    <!-- Profile Image -->
    <div class="w-fit mx-auto mt-8 mb-10">
      <a href="/">
        <div class="avatar transition ease-in-out hover:scale-[103%] block m-auto">
          <div class="w-[16rem]">
            <Image
              class="mask mask-circle object-cover"
              format="webp"
              width={600}
              height={600}
              src="/profile.webp"
              alt="Profile image"
            />
          </div>
        </div>
      </a>
    </div>

    <!-- Sidebar Menu -->
    <div class="flex-1">
      <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
    </div>

    <!-- Footer Icons (OSF aligned fix) -->
    <div class="mt-8 mb-4 flex justify-center space-x-6">
      <a
        href="https://osf.io/"
        target="_blank"
        class="inline-flex items-center justify-center w-8 h-8 align-middle"
        aria-label="Open Science Framework"
      >
        <!-- normalize OSF SVG size and baseline -->
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="w-7 h-7"
        >
          <title>Open Science Framework</title>
          <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="1.8"/>
          <path
            d="M12 6v6l4 2"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            fill="none"
          />
        </svg>
      </a>

      <SideBarFooter />
    </div>
  </aside>
</div>
