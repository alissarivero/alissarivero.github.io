---
const { sideBarActiveItemID } = Astro.props;
const activeClass = "bg-base-300"; // For primary color replace with `active` class
---

<ul class="menu grow shrink menu-md overflow-y-auto">
  <li><a class="py-3 text-base" id="home" href="/">Home</a></li>
  <li><a class="py-3 text-base" id="about-me" href="/about-me/">About Me</a></li>

  <!-- Research dropdown -->
  <li>
    <details>
      <summary class="py-3 !text-2xl !leading-snug">Research</summary> 
      <ul>
        <li><a class="py-3 text-base" id="research-interests" href="/research-interests">Research Interests</a></li>
        <li><a class="py-3 text-base" id="projects" href="/projects">Projects</a></li>
        <li><a class="py-3 text-base" id="publications" href="/publications/">Publications</a></li>
      </ul>
    </details>
  </li>

  <li><a class="py-3 text-base" id="speaking-sharing" href="/speaking-sharing/">Speaking &amp; Sharing</a></li>
  <li><a class="py-3 text-base" id="cv" href="/cv">CV</a></li>
  <li>
    <a
      class="py-3 text-base"
      href="mailto:alissa.rivero@duke.edu"
      target="_blank"
      referrerpolicy="no-referrer-when-downgrade"
    >Contact Me!</a>
  </li>
</ul>

<script define:vars={{ sideBarActiveItemID: sideBarActiveItemID, activeClass: activeClass }}>
const activeItemElem = document.getElementById(sideBarActiveItemID);
activeItemElem && activeItemElem.classList.add(activeClass);
</script>
